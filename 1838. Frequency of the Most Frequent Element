class Solution {
    public int maxFrequency(int[] nums, int k) {
        Arrays.sort(nums);
        int max = 0;
        
        for(int i = 0; i < nums.length; i++){
            int sum = 0;
        
        for(int j = i; j < nums.length; j++) {
            sum = sum + nums[j];
            int total = (j-i+1) * nums[j];
            int x = total - sum;
            if(x <= k) {
                max = Math.max(max,j-i+1);
            } else {
                break;
            }
        }
        }
        return max;
        
    }
}
